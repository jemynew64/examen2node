<h2 class="text-center mb-4">Lista usuarios</h2>

<!-- BotÃ³n para crear un nuevo usuario -->
<div class="text-center mb-4">
  <a href="/api/users/add" class="btn btn-primary btn-lg">Crear nuevo usuario</a>
</div>

<!-- Tabla de usuarios -->
<div class="table-responsive">
  <table class="table table-bordered table-hover table-striped">
    <thead class="table-light">
      <tr>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">DNI</th>
        <th scope="col">Emergency Number</th>
        <th scope="col">Phone</th>
        <th scope="col">Birth Date</th>
        <th scope="col">Gender</th>
        <th scope="col" class="text-center">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
      <tr>
        <td>{{this.firstName}}</td>
        <td>{{this.lastName}}</td>
        <td>{{this.dni}}</td>
        <td>{{this.emergency_number}}</td>
        <td>{{this.phone}}</td>
        <td>{{this.birthDate}}</td>
        <td>{{this.gender}}</td>
        <td class="text-center">
          <a href="/api/users/edit/{{this.id}}" class="btn btn-warning btn-sm">Edit</a>
          <form action="/api/users/delete/{{this.id}}" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
